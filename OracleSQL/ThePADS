--Score:30|Diff:Medium

SELECT * FROM
  (SELECT CONCAT(CONCAT(CONCAT(NAME,'('),SUBSTR(OCCUPATION,1,1)),')')
   FROM OCCUPATIONS
   ORDER BY NAME)
UNION
SELECT * FROM
  (SELECT CONCAT('There are a total of ',CONCAT(COUNT(OCCUPATION),CONCAT(' ',CONCAT(LOWER(OCCUPATION),'s.'))))
FROM OCCUPATIONS
GROUP BY OCCUPATION
ORDER BY COUNT(OCCUPATION),OCCUPATION);
